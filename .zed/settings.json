{
  // Input / Function
  "format_on_save": "off",
  "tab_size": 2,

  // File Scan/Search
  "file_scan_exclusions": [
    ".git/",
    ".DS_Store",
    ".ruby-lsp/",
    ".yarn/",
    "dist/"
  ],

  // Extensions
  "auto_install_extensions": {
    "html": true,
    "svelte": true
  },

  // Language / LSP
  "file_types": {
    "JSON": [".prettierrc"],
    "JSONC": [".oxlintrc.json"]
  },
  "languages": {
    "JavaScript": {
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.eslint": true
          }
        },
        {
          "external": {
            "command": "yarn",
            "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
          }
        }
      ]
    },
    "Svelte": {
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.eslint": true
          }
        },
        {
          "external": {
            "command": "yarn",
            "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
          }
        }
      ]
    },
    "TypeScript": {
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.eslint": true
          }
        },
        {
          "external": {
            "command": "yarn",
            "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
          }
        }
      ]
    }
  }
}
